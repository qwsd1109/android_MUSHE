<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context=".activity.SignUpActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.116" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.884" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="7sp"
        android:textColor="#4010c9"
        android:font="@font/nbg"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/guideliner2"
        app:layout_constraintStart_toStartOf="@+id/guideliner1"
        app:layout_constraintTop_toTopOf="@+id/guideliner3"
        android:text="무슈에 다시 오신걸 환영합니다" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.102" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_act_sign_up"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/guideliner5"
        app:layout_constraintStart_toStartOf="@+id/guideliner1"
        app:layout_constraintTop_toTopOf="@+id/guideliner4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.26" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.205" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signin_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:counterMaxLength="20"
        app:errorEnabled="true"
        app:layout_constraintEnd_toStartOf="@+id/guideliner2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideliner1"
        app:layout_constraintTop_toTopOf="@+id/guideliner7">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signin_edit_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center_vertical"
            android:hint="ID"
            android:inputType="text"
            android:maxLines="1"
            android:padding="5dp"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner7"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.344" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.447" />

    오전 10:10



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signin_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:layout_constraintEnd_toStartOf="@+id/guideliner2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideliner1"
        app:layout_constraintTop_toTopOf="@+id/guideliner8">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signin_edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center_vertical"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="5dp"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/Signinbutton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_2"
        android:text="로그인"
        android:font="@font/nbg"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/guideliner11"
        app:layout_constraintEnd_toStartOf="@+id/guideliner2"
        app:layout_constraintStart_toStartOf="@+id/guideliner1"
        app:layout_constraintTop_toTopOf="@+id/guideliner10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner10"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.642" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner11"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.709" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        android:textColor="#4010c9"
        android:textSize="15sp"
        android:background="@null"
        android:font="@font/nbg"
        android:id="@+id/tv_sign_up"
        app:layout_constraintStart_toStartOf="@+id/guideliner1"
        app:layout_constraintTop_toTopOf="@+id/guideliner12"
        android:text="처음 오셨나요?" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner12"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.754" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        android:textColor="#4010c9"
        android:background="@null"
        android:font="@font/nbg"
        android:textSize="15sp"
        android:id="@+id/tv_missing_pw"
        app:layout_constraintStart_toStartOf="@+id/guideliner1"
        app:layout_constraintTop_toTopOf="@+id/guideliner13"
        android:text="비밀번호를 까먹으셨나요?" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner13"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.81" />
</androidx.constraintlayout.widget.ConstraintLayout>