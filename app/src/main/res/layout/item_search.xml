<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideliner1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.049" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideliner5"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.432" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideliner2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.202" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideliner3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.798" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideliner6"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.382" />


            <TextView
                android:id="@+id/item_music_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:font="@font/nbg"
                android:lineSpacingExtra="7sp"
                android:textColor="#4010c9"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideliner5"
                app:layout_constraintTop_toTopOf="@+id/guideliner2"
                tools:text="접근금지" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:font="@font/nbg"
                android:lineSpacingExtra="4.5sp"
                android:textColor="#4010c9"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@+id/guideliner5"
                app:layout_constraintTop_toBottomOf="@+id/item_music_title"
                tools:text="펜타곤" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#4010c9"
                app:layout_constraintBottom_toTopOf="@+id/guideliner3"
                app:layout_constraintEnd_toStartOf="@+id/guideliner6"
                app:layout_constraintStart_toStartOf="@+id/guideliner1"
                app:layout_constraintTop_toTopOf="@+id/guideliner2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>