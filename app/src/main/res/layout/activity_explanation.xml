<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context=".ExplanationActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.102" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.116" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.884" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:font="@font/nbg"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="7sp"
        android:textColor="#4010c9"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/guideliner2"
        app:layout_constraintTop_toTopOf="@+id/guideliner1"
        android:text="무슈에 오신걸 환영합니다" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:font="@font/nbg"
        android:lineSpacingExtra="4sp"
        android:textColor="#4010c9"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/guideliner3"
        app:layout_constraintStart_toStartOf="@+id/guideliner2"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:text="처음 오신분은 회원가입을 해주시면 즐겁게 무슈를 사용할수있습니다
" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/im_explation"
        app:layout_constraintBottom_toTopOf="@+id/guideliner5"
        app:layout_constraintDimensionRatio="690:888"
        app:layout_constraintEnd_toStartOf="@+id/guideliner7"
        app:layout_constraintStart_toStartOf="@+id/guideliner2"
        app:layout_constraintTop_toTopOf="@+id/guideliner4"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.279" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.195" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner7"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.805" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_2"
        android:text="회원가입"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:id="@+id/btn_signup"
        app:layout_constraintBottom_toTopOf="@+id/guideliner9"
        app:layout_constraintEnd_toStartOf="@+id/guideliner3"
        app:layout_constraintStart_toStartOf="@+id/guideliner2"
        app:layout_constraintTop_toTopOf="@+id/guideliner8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.763" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner9"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.830" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_1"
        android:text="로그인"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#21ce98"
        android:id="@+id/btn_signin"
        app:layout_constraintBottom_toTopOf="@+id/guideliner11"
        app:layout_constraintEnd_toStartOf="@+id/guideliner3"
        app:layout_constraintStart_toStartOf="@+id/guideliner2"
        app:layout_constraintTop_toTopOf="@+id/guideliner10" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner10"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.847" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner11"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.914" />
</androidx.constraintlayout.widget.ConstraintLayout>