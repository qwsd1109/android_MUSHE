<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context=".activity.SelectActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.116" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.884" />

    <TextView
        android:id="@+id/textView4"
        android:font="@font/nbg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="7sp"
        android:textColor="#4010c9"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/guideliner2"
        app:layout_constraintStart_toStartOf="@+id/guideliner1"
        app:layout_constraintTop_toTopOf="@+id/guideliner3"
        tools:text="무슈에 오신걸 환영합니다" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.102" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:cardElevation="0dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toStartOf="@+id/guideliner2"
        app:layout_constraintStart_toStartOf="@+id/guideliner1"
        app:layout_constraintTop_toTopOf="@+id/guideliner4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:font="@font/nbg"
                android:lineSpacingExtra="14sp"
                android:textColor="#4010c9"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideliner6"
                app:layout_constraintTop_toTopOf="@+id/guideliner7"
                tools:text="방 생성" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideliner6"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.26"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideliner7"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.106"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideliner8"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.23"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideliner9"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.77"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="2976:3669"
                android:src="@mipmap/ic_select_cr"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideliner9"
                app:layout_constraintStart_toStartOf="@+id/guideliner8" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.166" />


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/guideliner2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideliner1"
        app:layout_constraintTop_toTopOf="@+id/guideliner5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="14sp"
                android:font="@font/nbg"
                android:textColor="#4010c9"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideliner10"
                app:layout_constraintTop_toTopOf="@+id/guideliner11"
                tools:text="방 참가" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideliner10"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.26"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideliner11"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.747"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideliner12"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.191"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideliner14"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.045"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideliner13"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.809"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@mipmap/ic_select_cr"
                app:layout_constraintDimensionRatio="3400:3717"
                app:layout_constraintEnd_toStartOf="@+id/guideliner13"
                app:layout_constraintStart_toStartOf="@+id/guideliner12"
                app:layout_constraintTop_toTopOf="@+id/guideliner14" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.578" />
</androidx.constraintlayout.widget.ConstraintLayout>